generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Transaction {
  id     Int             @id @default(autoincrement())
  title  String
  date   DateTime
  type   TransactionType
  amount Int

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Category {
  id    Int    @id @default(autoincrement())
  title String

  Transaction Transaction[]

  userId Int?
  User   User? @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model User {
  id         Int        @id @default(autoincrement())
  username   String
  categories Category[]

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
