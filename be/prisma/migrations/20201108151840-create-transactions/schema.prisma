generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Transaction {
  id       Int             @id @default(autoincrement())
  title    String
  date     DateTime
  type     TransactionType
  amount   Int
  category String

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model User {
  id       Int    @id @default(autoincrement())
  username String
}
