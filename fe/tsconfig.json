{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "gql/*": [
        "./src/gql/*"
      ],
      "stores/*": [
        "./src/stores/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "svg/*": [
        "./src/svg/*"
      ],
      "directives/*": [
        "./src/directives/*"
      ],
      "config/*": [
        "./src/config/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "layouts/*": [
        "./src/layouts/*"
      ],
    }
  }
}