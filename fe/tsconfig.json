{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "gql/*": [
        "./src/gql/*"
      ],
      "stores/*": [
        "./src/stores/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
    }
  }
}